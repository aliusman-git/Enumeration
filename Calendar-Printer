import java.time.DayOfWeek;
import java.time.LocalDate;
import java.util.Scanner;

public class CalendarPrinter {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter year: ");
        int year = sc.nextInt();
        System.out.print("Enter month : ");
        int month = sc.nextInt();
        LocalDate date = LocalDate.of(year, month, 1);
        DayOfWeek firstDay = date.getDayOfWeek();
        int daysInMonth = date.lengthOfMonth();
        String monthName = date.getMonth().toString().substring(0,1) + date.getMonth().toString().substring(1).toLowerCase();
        System.out.println("\nCalendar for the month of " + monthName + ", " + year);
        System.out.println("Su  Mo  Tu  We  Th  Fr  Sa");
        int startPos = firstDay.getValue() % 7;
        for (int i = 0; i < startPos; i++) 
            System.out.print("    ");
        for (int day = 1; day <= daysInMonth; day++) {
            System.out.printf("%-4d", day);
            if ((day + startPos) % 7 == 0) System.out.println();
        }
        System.out.println();
        sc.close();
    }
}
